<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#3A1772"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip">

        <ImageView
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:src="@drawable/dev_photo"
            android:padding="5dip"
            android:layout_marginBottom="5dip"
            android:layout_gravity="center"
            android:background="@drawable/profile_pic_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:gravity="center_horizontal"
            android:textColor="#C8AD55"
            android:textSize="20sp"
            android:text="@string/author"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dip"
                android:textColor="#D8DBE2"
                android:textSize="18sp"
                android:text="@string/description"/>


            <ImageButton
                android:layout_marginTop="10dip"
                android:id="@+id/linkedInBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_linkedin"
                android:background="@drawable/rounded_speaker_bg"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>